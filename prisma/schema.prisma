generator client {
  provider = "prisma-client"
  output = "../generated/prisma"

}

datasource db {
  provider = "postgresql"
}



enum Categoria {
  BOLOS
  DOCINHOS
  SOBREMESAS
}

enum Especificacao {
  CASEIRO
  VULCAO
  ANIVERSARIO
  GOURMET
  FINOS
  BROWNIES
  TRAVESSA
  COOKIES
}

model Doce {
  id            Int           @id @default(autoincrement())
  nome          String
  categoria     Categoria
  especificacao Especificacao
  imagemUrl     String
}